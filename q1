<head>
  <meta charset="UTF-8">
  <title>謎1</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <h2>謎1</h2>
  <input type="text" id="answer" placeholder="答え">
  <button onclick="checkAnswer()">判定</button>
  <p id="result"></p>

  <script>
    function checkAnswer(){
      let input = document.getElementById("answer").value.trim();
      let correct = "かえる"; // 正解をここに書く
      if(input === correct){
        document.getElementById("result").innerText = "✅ 正解！";
      } else {
        document.getElementById("result").innerText = "❌ 不正解";
      }
    }
  </script>
</body>
